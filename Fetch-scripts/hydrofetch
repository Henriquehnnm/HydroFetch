#!/bin/bash

# Cores üåà
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
MAGENTA='\033[1;35m'
CYAN='\033[1;36m'
WHITE='\033[1;37m'
NC='\033[0m' # Sem cor

# Verificar e instalar Figlet üöÄ
if ! command -v figlet &> /dev/null; then
    echo -e "${YELLOW}Figlet n√£o encontrado. Instalando...${NC}"
    if command -v apt &> /dev/null; then
        sudo apt update && sudo apt install -y figlet
    elif command -v dnf &> /dev/null; then
        sudo dnf install -y figlet
    elif command -v pacman &> /dev/null; then
        sudo pacman -Sy --noconfirm figlet
    elif command -v apk &> /dev/null; then
        sudo apk add figlet
    else
        echo -e "${RED}Gerenciador de pacotes n√£o suportado! Instale o Figlet manualmente.${NC}"
        exit 1
    fi
fi

# Easter Egg --tux üêß
if [[ "$1" == "--tux" ]]; then
    echo -e "${CYAN}Invocando o grande Tux...${NC}"
    echo -e "${BLUE}"
    cat << 'EOF'
         .--.
        |o_o |
        |:_/ |
       //   \ \
      (|     | )
     /'\_   _/`\
     \___)=(___/
EOF
    echo -e "${NC}"
    exit 0
fi

# Criar diret√≥rio .neonfetch üë§
NEONFETCH_DIR="$HOME/.hydrofetch"
FONT_PATH="$NEONFETCH_DIR/Custom.flf"
mkdir -p "$NEONFETCH_DIR"

# üé≠ Nerd Font Icons (Certifique-se de ter uma fonte Nerd Font instalada!)
ICON_USER="ÔÄá "
ICON_HOST="Û∞ñü "
ICON_OS="Û∞åΩ "
ICON_KERNEL="Ó∫ú "
ICON_DE="Û∞çπ "
ICON_RAM="ÓøÖ "
ICON_COLORS="Óà´ "

# Nome da Distro com Figlet üéØ
OS_NAME=$(grep -E '^NAME=' /etc/os-release | cut -d'=' -f2 | tr -d '"')
if [ -f "$FONT_PATH" ]; then
    echo -e "${CYAN}"  # Exibe em ciano
    figlet -f "$FONT_PATH" "$OS_NAME"
else
    echo -e "${CYAN}"  # Exibe em ciano
    figlet "$OS_NAME"
fi

# Informa√ß√µes do sistema üìä
USER="$(whoami)"
HOST="$(hostname)"
OS="$OS_NAME"
KERNEL="$(uname -r)"
DE="${XDG_CURRENT_DESKTOP:-N/A}"
RAM=$(free -h --si | awk 'NR==2 {print $3 " / " $2}')

# Exibir o logo
echo -e "$CYAN$LOGO$NC"

# Exibir informa√ß√µes dentro de uma √∫nica caixa üè∞
echo -e "${MAGENTA}‚îå‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îê${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_USER ${MAGENTA}‚îÇ${WHITE} User:   %-22s ${MAGENTA}‚îÇ${NC}\n" "$USER"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_HOST ${MAGENTA}‚îÇ${WHITE} Host:   %-22s ${MAGENTA}‚îÇ${NC}\n" "$HOST"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_OS ${MAGENTA}‚îÇ${WHITE} OS:     %-22s ${MAGENTA}‚îÇ${NC}\n" "$OS"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_KERNEL ${MAGENTA}‚îÇ${WHITE} Kernel: %-22s ${MAGENTA}‚îÇ${NC}\n" "$KERNEL"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_DE ${MAGENTA}‚îÇ${WHITE} DE:     %-22s ${MAGENTA}‚îÇ${NC}\n" "$DE"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_RAM ${MAGENTA}‚îÇ${WHITE} RAM:    %-22s ${MAGENTA}‚îÇ${NC}\n" "$RAM"
echo -e "${MAGENTA}‚îÇ    ${MAGENTA}‚îÇ${WHITE}                                ${MAGENTA}‚îÇ${NC}"
printf "${MAGENTA}‚îÇ${WHITE} $ICON_COLORS${MAGENTA} ‚îÇ${WHITE} Colors: ${RED}ÔÑë${NC}  ${GREEN}ÔÑë${NC}  ${YELLOW}ÔÑë${NC}  ${BLUE}ÔÑë${NC}  ${MAGENTA}ÔÑë${NC}  ${CYAN}ÔÑë${NC}  ${WHITE}ÔÑë${NC}    ${MAGENTA}‚îÇ${NC}\n"
echo -e "${MAGENTA}‚îî‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îò${NC}"
