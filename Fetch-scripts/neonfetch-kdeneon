#!/bin/bash

# Cores 
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
MAGENTA='\033[1;35m'
CYAN='\033[1;36m'
WHITE='\033[1;37m'
NC='\033[0m' # Sem cor

# Ícone Nerd Font (Verificação opcional)
if fc-list | grep -qi "Nerd Font"; then
    ICON="" # Ícone na Nerd Font
else
    ICON="*" # Fallback caso a Nerd Font não esteja instalada
fi

# Logo ASCII 
LOGO="${CYAN}
 ██╗  ██╗██████╗ ███████╗    ███╗   ██╗███████╗ ██████╗ ███╗   ██╗  
 ██║ ██╔╝██╔══██╗██╔════╝    ████╗  ██║██╔════╝██╔═══██╗████╗  ██║  
 █████╔╝ ██║  ██║█████╗      ██╔██╗ ██║█████╗  ██║   ██║██╔██╗ ██║  
 ██╔═██╗ ██║  ██║██╔══╝      ██║╚██╗██║██╔══╝  ██║   ██║██║╚██╗██║  
 ██║  ██╗██████╔╝███████╗    ██║ ╚████║███████╗╚██████╔╝██║ ╚████║  
 ╚═╝  ╚═╝╚═════╝ ╚══════╝    ╚═╝  ╚═══╝╚══════╝ ╚═════╝ ╚═╝  ╚═══╝  
${NC}"

# Informações do sistema 
USER="$(whoami)"
HOST="$(hostname)"
OS="$(lsb_release -ds)"
KERNEL="$(uname -r)"
SHELL="$(basename "$SHELL")"
DE="$XDG_CURRENT_DESKTOP"
RAM="$(free -h --si | awk '/^Mem:/ {print $3 "/" $2}')"

# Exibir o logo
echo -e "$LOGO"

# Exibir informações dentro de uma única caixa 
echo -e "${MAGENTA}┌─────────────────────────────────┐${NC}"
printf "${MAGENTA}│${WHITE} User:    %-22s ${MAGENTA}│${NC}\n" "$USER"
printf "${MAGENTA}│${WHITE} Host:    %-22s ${MAGENTA}│${NC}\n" "$HOST"
printf "${MAGENTA}│${WHITE} OS:      %-22s ${MAGENTA}│${NC}\n" "$OS"
printf "${MAGENTA}│${WHITE} Kernel:  %-22s ${MAGENTA}│${NC}\n" "$KERNEL"
printf "${MAGENTA}│${WHITE} Shell:   %-22s ${MAGENTA}│${NC}\n" "$SHELL"
printf "${MAGENTA}│${WHITE} DE:      %-22s ${MAGENTA}│${NC}\n" "$DE"
printf "${MAGENTA}│${WHITE} RAM:     %-22s ${MAGENTA}│${NC}\n" "$RAM"
echo -e "${MAGENTA}└─────────────────────────────────┘${NC}"

# Exibir Nerd Icons coloridos 
echo -e " ${RED}$ICON${NC} ${GREEN}$ICON${NC} ${YELLOW}$ICON${NC} ${BLUE}$ICON${NC} ${MAGENTA}$ICON${NC} ${CYAN}$ICON${NC} ${WHITE}$ICON${NC}"
